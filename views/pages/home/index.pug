block main
  style.
    :root {
      --primary-gradient: linear-gradient(135deg, #4f46e5 0%, #7c3aed 100%);
      --soft-bg: #f8fafc;
      --text-main: #1e293b;
    }
    body { font-family: 'Plus Jakarta Sans', sans-serif; color: var(--text-main); background: #fff; }

    /* Hero Section */
    .hero-section {
      padding: 100px 0;
      background: radial-gradient(circle at top right, #e9e9efff);
    }
    .hero-headline .text-1 {
      font-size: 3rem; line-height: 1.1; letter-spacing: -2px;
      background: linear-gradient(90deg, #95a6eeff 0%, #764ba2 100%);
      -webkit-background-clip: text; -webkit-text-fill-color: transparent;
    }
    .hero-headline .text-2 { font-size: 1.25rem; color: #64748b; margin-top: 24px; }
    .hero-illustration {
      filter: drop-shadow(0 20px 50px rgba(79, 70, 229, 0.2));
      animation: float 6s ease-in-out infinite;
    }
    @keyframes float {
      0%, 100% { transform: translateY(0); }
      50% { transform: translateY(-20px); }
    }

    /* Feature Cards */
    .feature-section { padding: 80px 0; background: var(--soft-bg); border-radius: 60px 60px 0 0; }
    .feature-card {
      background: #fff; padding: 40px 30px; border-radius: 24px;
      border: 1px solid #e2e8f0; transition: all 0.3s ease; height: 100%;
    }
    .feature-card:hover {
      transform: translateY(-10px); border-color: #4f46e5;
      box-shadow: 0 20px 40px rgba(0,0,0,0.05);
    }
    .feature-icon {
      font-size: 2.5rem; margin-bottom: 20px; display: inline-block;
      padding: 15px; background: #f1f5f9; border-radius: 16px;
    }

    /* Benefit Cards */
    .benefit-card {
      border-radius: 24px !important; transition: 0.3s;
      background: rgba(255, 255, 255, 0.8) !important;
      backdrop-filter: blur(10px);
    }
    .benefit-card:hover { background: #fff !important; box-shadow: 0 30px 60px rgba(0,0,0,0.1) !important; }
    .btn-primary-custom {
      background: var(--primary-gradient); border: none; padding: 16px 40px;
      border-radius: 14px; font-weight: 700; box-shadow: 0 10px 20px rgba(79, 70, 229, 0.3);
      transition: 0.3s;
    }
    .btn-primary-custom:hover { transform: scale(1.05); box-shadow: 0 15px 30px rgba(79, 70, 229, 0.4); }

