extends ../../layout/default.pug
include ../../mixin/alert.pug

block main
  +alert-error(5000)

  .forgot-password-wrapper
    .container
      .row.justify-content-center
        .col-xl-4.col-lg-5.col-md-7
          .forgot-card
            .auth-header.text-center
              .icon-circle
                i.fas.fa-key
              h2 Quên mật khẩu?
              p.text-muted Nhập email của bạn để nhận mã xác thực lấy lại mật khẩu.

            .auth-body
              form(action="/user/password/forgot" method="POST")
                .form-group-custom
                  label(for="email") 
                    i.fas.fa-envelope.mr-2
                    | Email khôi phục
                  input(
                    type="email"
                    class="form-control-modern"
                    id="email"
                    name="email"
                    placeholder="example@gmail.com"
                    required
                  )
                
                button(type="submit" class="btn-modern") 
                  span Gửi mã xác nhận
                  i.fas.fa-paper-plane.ml-2

            .auth-footer.text-center
              a(href="/user/login" class="back-link") 
                i.fas.fa-arrow-left.mr-2
                | Quay lại đăng nhập
    style. 
        :root {
            --primary-color: #6366f1;
            --primary-hover: #4f46e5;
            --bg-gradient: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
        }

        .forgot-password-wrapper {
            background: var(--bg-gradient);
            min-height: 80vh; /* Thấp hơn trang đăng ký để tập trung vào giữa */
            display: flex;
            align-items: center;
            padding: 60px 0;
        }

        .forgot-card {
            background: #ffffff;
            border-radius: 28px;
            padding: 40px;
            box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.05);
            border: 1px solid rgba(0, 0, 0, 0.02);
        }

        .icon-circle {
            width: 70px;
            height: 70px;
            background: rgba(99, 102, 241, 0.1);
            color: var(--primary-color);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.8rem;
            margin: 0 auto 20px;
        }

        .auth-header h2 {
            font-weight: 800;
            color: #1e293b;
            font-size: 1.6rem;
            margin-bottom: 10px;
        }

        .form-group-custom {
            margin: 30px 0;
        }

        .form-group-custom label {
            font-size: 0.9rem;
            font-weight: 600;
            color: #475569;
            margin-bottom: 10px;
            display: block;
        }

        .form-control-modern {
            width: 100%;
            padding: 14px 18px;
            border-radius: 14px;
            border: 2px solid #f1f5f9;
            background: #f8fafc;
            transition: all 0.3s ease;
        }

        .form-control-modern:focus {
            border-color: var(--primary-color);
            background: #fff;
            outline: none;
            box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.1);
        }

        .btn-modern {
            width: 100%;
            padding: 16px;
            background: linear-gradient(135deg, var(--primary-color) 0%, #8b5cf6 100%);
            color: white;
            border: none;
            border-radius: 14px;
            font-weight: 700;
            display: flex;
            justify-content: center;
            align-items: center;
            transition: all 0.3s ease;
            cursor: pointer;
        }

        .btn-modern:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 15px -3px rgba(99, 102, 241, 0.3);
            filter: brightness(1.1);
        }

        .back-link {
            display: inline-block;
            margin-top: 25px;
            color: #64748b;
            text-decoration: none;
            font-weight: 600;
            font-size: 0.95rem;
            transition: color 0.3s ease;
        }

        .back-link:hover {
            color: var(--primary-color);
        }