extends ../../layout/default.pug
include ../../mixin/alert.pug

block main
  +alert-error(5000)

  style.
    :root {
      --primary-purple: #7f00ff;
      --secondary-purple: #e100ff;
    }
    body {
      background: #f4f7f6; /* Màu nền trung tính để nổi bật Card */
      min-height: 100vh;
    }
    .reset-card {
      background: #ffffff;
      border: none;
      border-radius: 20px;
      box-shadow: 0 15px 35px rgba(0,0,0,0.1);
      overflow: hidden;
      margin-top: 50px;
    }
    .reset-header {
      background: linear-gradient(135deg, var(--primary-purple), var(--secondary-purple));
      padding: 40px;
      color: white;
      text-align: center;
    }
    .reset-body {
      padding: 40px;
    }
    .form-control {
      height: 50px;
      border-radius: 10px;
      border: 1px solid #ddd;
      margin-bottom: 20px;
    }
    .form-control:focus {
      border-color: var(--primary-purple);
      box-shadow: 0 0 0 0.2rem rgba(127, 0, 255, 0.1);
    }
    .btn-submit {
      height: 50px;
      background: linear-gradient(to right, var(--primary-purple), var(--secondary-purple));
      border: none;
      border-radius: 10px;
      color: white;
      font-weight: bold;
      letter-spacing: 1px;
      transition: all 0.3s;
    }
    .btn-submit:hover {
      opacity: 0.9;
      transform: translateY(-2px);
    }

  .container
    .row.justify-content-center
      //- Đổi từ col-lg-5 sang col-lg-6 hoặc col-md-8 để không gian rộng hơn
      .col-12.col-md-8.col-lg-6
        .reset-card
          .reset-header
            h2.mb-0.fw-bold Đổi mật khẩu
            p.opacity-75.mt-2 Nhập mật khẩu mới để tiếp tục
          
          .reset-body
            form(action="/user/password/reset" method="POST")
              .form-group
                label.mb-2.small.fw-bold.text-uppercase Mật khẩu mới
                input.form-control(
                  type="password"
                  name="password"
                  placeholder="Nhập tối thiểu 8 ký tự"
                  required
                )
              
              .form-group
                label.mb-2.small.fw-bold.text-uppercase Xác nhận mật khẩu
                input.form-control(
                  type="password"
                  name="confirmPassword"
                  placeholder="Nhập lại mật khẩu phía trên"
                  required
                )

              button.btn.btn-submit.w-100.mt-3(type="submit") CẬP NHẬT NGAY