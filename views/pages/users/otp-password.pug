extends ../../layout/default.pug
include ../../mixin/alert.pug

block main
  +alert-error(5000)

  .auth-page-wrapper
    //- Thêm các đốm màu trang trí phía sau cho đồng bộ concept "hiện đại"
    .bg-blob.blob-indigo
    .bg-blob.blob-purple

    .container
      .row.justify-content-center
        .col-xl-4.col-lg-5.col-md-7
          .auth-card-modern
            .auth-header.text-center
              .icon-status-wrapper
                .icon-circle-pulsate
                  i.fas.fa-shield-alt
                .status-badge#countdown-timer
                  i.fas.fa-clock.mr-1
                  span 5:00

              h2 Xác thực mã OTP
              p.text-muted Một mã gồm 6 ký tự đã được gửi tới hòm thư của bạn
              .email-display-badge
                i.fas.fa-envelope.mr-2
                span #{email}

            .auth-body.mt-4
              form(action="/user/password/otp" method="POST")
                //- Giữ email ẩn để submit
                input(type="hidden" name="email" value=email)

                .form-group-custom
                  label(for="otp" class="input-label-center") Nhập mã xác minh tại đây
                  input(
                    type="text"
                    class="form-control-modern otp-input-modern"
                    id="otp"
                    name="otp"
                    placeholder="· · · · · ·"
                    maxlength="8"
                    required
                    autofocus
                    autocomplete="one-time-code"
                  )
                
                button(type="submit" class="btn-gradient-modern mt-4") 
                  span Xác nhận tài khoản
                  i.fas.fa-arrow-right.ml-2

            .auth-footer.text-center.mt-4
              p.text-muted.small Không nhận được thư? 
                a(href="/user/password/forgot" class="resend-link-modern") Thử lại sau 60s
              a(href="/user/login" class="back-to-login") 
                i.fas.fa-chevron-left.mr-1
                | Quay lại đăng nhập
    style. 
        :root {
        --primary: #6366f1;
        --secondary: #a855f7;
        --text-soft: #64748b;
        --glass-bg: rgba(255, 255, 255, 0.9);
        }

        .auth-page-wrapper {
        background: #f8fafc;
        min-height: 100vh;
        display: flex;
        align-items: center;
        position: relative;
        overflow: hidden;
        padding: 40px 0;
        
        }

        /* Blobs trang trí nền */
        .bg-blob {
        position: absolute;
        width: 500px;
        height: 500px;
        filter: blur(80px);
        opacity: 0.15;
        z-index: 0;
        }
        .blob-indigo { top: -100px; right: -50px; background: var(--primary); }
        .blob-purple { bottom: -100px; left: -50px; background: var(--secondary); }

        .auth-card-modern {
        background: var(--glass-bg);
        backdrop-filter: blur(10px);
        border-radius: 32px;
        padding: 40px;
        border: 1px solid rgba(255, 255, 255, 0.6);
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.08);
        position: relative;
        z-index: 1;
        }

        .email-display-badge {
        display: inline-flex;
        align-items: center;
        background: #f1f5f9;
        padding: 6px 16px;
        border-radius: 100px;
        font-size: 0.85rem;
        color: var(--primary);
        font-weight: 600;
        margin-top: 10px;
        }

        /* OTP Input Style */
        .otp-input-modern {
            width: 100%;
            text-align: center;
            font-size: 1.8rem !important;
            letter-spacing: 0.8rem;
            font-weight: 800;
            color: var(--primary);
            border: 2px solid #e2e8f0 !important;
            background: #fff !important;
            height: 70px;
            border-radius: 20px !important;
        }

        .otp-input-modern::placeholder {
            width: 100%;
            letter-spacing: 0.5rem;
            color: #cbd5e1;
            font-weight: 400;
        }

        .otp-input-modern:focus {
            width: 100%;
            max-width: 280px; /* Giới hạn chiều rộng để không tràn */
            height: 60px;
            text-align: center;
            font-size: 2rem !important;
            /* Giảm letter-spacing để không bị đẩy ra khỏi khung */
            letter-spacing: 12px; 
            padding-left: 12px; /* Để bù trừ cho letter-spacing, giúp text căn giữa chuẩn */
            font-weight: 800;
            color: var(--primary);
            border: 2px solid #e2e8f0;
            border-radius: 16px;
            background: #fff;
            transition: all 0.3s ease;
            outline: none;
        }

        /* Button Gradient */
        .btn-gradient-modern {
            width: 100%;
            padding: 16px;
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            color: white;
            border: none;
            border-radius: 18px;
            font-weight: 700;
            font-size: 1rem;
            display: flex;
            justify-content: center;
            align-items: center;
            transition: all 0.3s ease;
            cursor: pointer;
        }

        .btn-gradient-modern:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 25px -5px rgba(99, 102, 241, 0.4);
        }

        .resend-link-modern {
            color: var(--primary);
            font-weight: 700;
            text-decoration: none;
        }

        .back-to-login {
        display: block;
        margin-top: 20px;
        color: var(--text-soft);
        text-decoration: none;
        font-size: 0.9rem;
        font-weight: 500;
        }

        .input-label-center {
        display: block;
        text-align: center;
        font-weight: 600;
        color: #475569;
        margin-bottom: 15px;
        }

    script.
        // Đếm ngược gửi lại mã OTP (60s)
        let timeLeft = 60;
        const counterSpan = document.getElementById('resend-counter');
        const resendBtn = document.getElementById('resend-btn');

        const timer = setInterval(() => {
            timeLeft--;
            counterSpan.innerText = timeLeft;
            if (timeLeft <= 0) {
            clearInterval(timer);
            resendBtn.classList.remove('disabled');
            resendBtn.innerHTML = "Gửi lại mã ngay";
            resendBtn.onclick = () => { location.reload(); }; // Logic gửi lại mã
            }
        }, 1000);

        // Đếm ngược thời gian hết hạn mã (5 phút)
        let duration = 5 * 60;
        const display = document.getElementById('countdown-timer');
        setInterval(() => {
            let minutes = Math.floor(duration / 60);
            let seconds = duration % 60;
            display.innerText = `${minutes < 10 ? '0' : ''}${minutes}:${seconds < 10 ? '0' : ''}${seconds}`;
            if (--duration < 0) display.innerText = "Hết hạn";
        }, 1000);