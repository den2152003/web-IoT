extends ../../layout/default.pug
include ../../mixin/alert.pug
include ../../mixin/box-head

block main
    +alert-error(5000)
    +alert-success(5000)

    link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css")

    style.
        :root {
            --primary-gradient: linear-gradient(135deg, #6366f1 0%, #a855f7 100%);
            --glass-bg: rgba(255, 255, 255, 0.9);
        }
        body { background: #f8fafc; font-family: 'Inter', sans-serif; }
        .profile-container { max-width: 850px; margin: 4rem auto; }
        .modern-card {
            background: var(--glass-bg);
            border-radius: 24px;
            border: 1px solid rgba(255, 255, 255, 0.4);
            box-shadow: 0 20px 40px rgba(0,0,0,0.05);
            overflow: hidden;
            backdrop-filter: blur(10px);
        }
        .profile-header {
            background: var(--primary-gradient);
            padding: 3.5rem 2rem;
            text-align: center;
            color: white;
        }
        .profile-avatar-wrapper {
            position: relative;
            width: 120px;
            height: 120px;
            margin: 0 auto 1.5rem;
        }
        .profile-avatar-img {
            width: 100%; height: 100%;
            object-fit: cover;
            border-radius: 35px; /* Squircle */
            border: 4px solid white;
            transform: rotate(-5deg);
            box-shadow: 0 10px 20px rgba(0,0,0,0.15);
            background: #fff;
        }
        .profile-avatar-placeholder {
            width: 100%; height: 100%;
            background: white; border-radius: 35px;
            display: flex; align-items: center; justify-content: center;
            font-size: 3rem; color: #6366f1; transform: rotate(-5deg);
        }
        .info-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 1.25rem;
            padding: 2.5rem;
        }
        .info-tile {
            padding: 1.25rem;
            border-radius: 18px;
            background: #f1f5f9;
            border: 1px solid transparent;
            transition: all 0.3s ease;
        }
        .info-tile:hover {
            background: white;
            border-color: #6366f1;
            transform: translateY(-3px);
            box-shadow: 0 10px 15px rgba(0,0,0,0.05);
        }
        .tile-label {
            font-size: 0.7rem; font-weight: 700;
            color: #64748b; text-transform: uppercase;
            margin-bottom: 0.4rem; letter-spacing: 0.5px;
        }
        .tile-value { font-weight: 600; color: #1e293b; }
        .btn-action {
            border-radius: 12px; padding: 12px 28px;
            font-weight: 600; transition: all 0.3s; border: none;
        }
        .btn-edit { background: #1e293b; color: white; }
        .btn-edit:hover { background: #000; transform: translateY(-2px); box-shadow: 0 5px 15px rgba(0,0,0,0.2); }
        .status-badge {
            display: inline-flex; align-items: center;
            padding: 4px 12px; border-radius: 20px; font-size: 0.85rem;
        }
        .active { background: #dcfce7; color: #15803d; }

    .container.profile-container
        .modern-card
            //- Header Section
            .profile-header
                .profile-avatar-wrapper
                    if (user.avatar)
                        img(src=user.avatar, class="profile-avatar-img")
                    else
                        .profile-avatar-placeholder
                            i.fas.fa-user
                h2.font-weight-bold.mb-1 #{user.fullName}
                p.opacity-75.mb-0
                    i.fas.fa-envelope.mr-2
                    | #{user.email}
            
            //- Info Grid Section
            .info-grid
                .info-tile
                    .tile-label Trạng thái tài khoản
                    if (user.status === 'active')
                        .status-badge.active
                            i.fas.fa-check-circle.mr-2
                            | Đang hoạt động
                    else
                        .status-badge.pending Chờ xác minh

                .info-tile
                    .tile-label Ngày sinh
                    .tile-value
                        i.fas.fa-birthday-cake.mr-2.text-muted
                        | #{user.birthday ? new Date(user.birthday).toLocaleDateString('vi-VN') : "Chưa cập nhật"}

                .info-tile
                    .tile-label Địa chỉ
                    .tile-value
                        i.fas.fa-map-marker-alt.mr-2.text-muted
                        | #{user.address || "Chưa cập nhật"}

                .info-tile
                    .tile-label Ngày gia nhập
                    .tile-value
                        i.fas.fa-calendar-alt.mr-2.text-muted
                        | #{new Date(user.createdAt).toLocaleDateString('vi-VN')}

                .info-tile(style="grid-column: span 2")
                    .tile-label ID Định danh
                    .tile-value.small.text-muted ##{user._id}

            //- Footer Section
            .p-4.bg-white.text-center.border-top
                .d-flex.justify-content-center.gap-3
                    a.btn-action.btn-edit(href=`/user/edit/${user._id}`) 
                        i.fas.fa-user-pen.mr-2
                        | Chỉnh sửa thông tin
                    button.btn-action.btn-password.ml-3(
                        style="background: #f1f5f9; color: #1e293b;"
                        data-toggle="modal" 
                        data-target="#changePasswordModal"
                    ) 
                        i.fas.fa-shield-halved.mr-2
                        | Thay đổi mật khẩu


    //- Modal Password - Glass Style
    #changePasswordModal.modal.fade(tabindex="-1" aria-hidden="true")
        .modal-dialog.modal-dialog-centered 
            .modal-content.border-0.shadow-2xl(style="border-radius: 24px;")
                .modal-body.p-5
                    .text-center.mb-4
                        .icon-box.mb-3(style="font-size: 2rem; color: #6366f1")
                            i.fas.key
                        h4.font-weight-bold Thay đổi mật khẩu
                        p.text-muted Tạo mật khẩu mạnh để bảo vệ tài khoản

                    form(action="/user/info" method="POST")
                        .form-group.mb-3
                            label.small.font-weight-bold Mật khẩu mới
                            input.form-control.form-control-lg(
                                type="password" 
                                name="newPassword" 
                                placeholder="••••••••" 
                                style="border-radius: 12px; background: #f8fafc;"
                                required
                            )
                        .form-group.mb-4
                            label.small.font-weight-bold Xác nhận lại
                            input.form-control.form-control-lg(
                                type="password" 
                                name="verifyNewPassword" 
                                placeholder="••••••••" 
                                style="border-radius: 12px; background: #f8fafc;"
                                required
                            )
                        button.btn.btn-action.btn-block.btn-edit.py-3(type="submit") 
                            | Lưu thay đổi ngay