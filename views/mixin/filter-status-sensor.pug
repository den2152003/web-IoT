mixin filter-status-sensor(filterStatusSensor)
  .filter-sensor-wrapper
    each item in filterStatusSensor
      button(
        class=`filter-sensor-item ${item.class}`
        button-status-sensor= item.status
      ) 
        if item.status == 'temperature'
          i.fas.fa-thermometer-half.mr-1
        else if item.status == 'humidity'
          i.fas.fa-tint.mr-1
        else if item.status == 'light'
          i.fas.fa-sun.mr-1
        else if item.status == 'airQuality'
          i.fas.fa-wind.mr-1
        
        span #{item.name}